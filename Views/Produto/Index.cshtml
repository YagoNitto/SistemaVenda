@model ProdutoModel;

<h3>Lista de Produtos</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descricao</th>
            <th>Preço Unitário</th>
            <th>Quantidade Estoque</th>
            <th>Unidade de Medida</th>
            <th>Foto</th>
            <th>#</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @{
                foreach (var item in (List<ProdutoModel>) ViewBag.ListaProdutos)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.Descricao</td>
                        <td>@item.Preco_Unitario</td>
                        <td>@item.Quantidade_Estoque</td>
                        <td>@item.Unidade_Medida</td>
                        <td><img src="@item.Link_Foto" width="150px" height="150px" /></td>
                        <td><button type="button" class="btn btn-warning" onclick="Editar(@item.Id)">Editar</button></td>
                        <td><button type="button" class="btn btn-danger" onclick="Excluir(@item.Id)">Excluir</button></td>
                    </tr>
                }
            }
    </tbody>
</table>
<br />
<button class="btn btn-block btn-success" type="button" onclick="Cadastrar()">Cadastrar Produto</button>
<br><br><br>
<button class="btn btn-block btn-primary" type="button" onclick="Voltar()">Voltar</button>


<script>
    function Cadastrar()
    {
        window.location.href = "../Produto/Cadastro";
    }

    function Editar(id)
    {
        window.location.href = "../Produto/Cadastro/" + id;
    }

    function Excluir(id)
    {
        window.location.href = "../Produto/Excluir/" + id;
    }

    function Voltar()
    {
        window.location.href = "../Home/Menu"
    }
</script>